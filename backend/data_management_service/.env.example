# PostgreSQL database connection string
DATABASE_URL="postgresql+psycopg2://user:password@localhost:5433/data_db"

# MinIO/S3 Object Storage Configuration
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_SECURE=False # Set to True for HTTPS (e.g., if using a reverse proxy with SSL)
MINIO_BUCKET_NAME="scientific-datasets"

# JWT settings (CRITICAL: Must match Auth Service's SECRET_KEY and ALGORITHM)
# GENERATE A STRONG, UNIQUE KEY FOR PRODUCTION.
# Example: openssl rand -hex 32
SECRET_KEY="your-super-secret-key-here-change-this-in-production"
ALGORITHM="HS256"

# Set the environment. 'development' allows auto-migrations.
# In 'production' or 'testing', migrations should be handled externally (e.g., Alembic).
ENVIRONMENT="development"
