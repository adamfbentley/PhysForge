# MinIO/S3 Object Storage Configuration for PINN models, checkpoints, and logs
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_SECURE=True # SEC-CFG-001: Default to True for HTTPS. Set to False ONLY for specific dev environments.
MINIO_BUCKET_NAME="pinn-training-results"

# Data Management Service URL
DATA_MANAGEMENT_SERVICE_URL="http://localhost:8002"

# SEC-PTS-001: Removed DMS_SECRET_KEY and DMS_ALGORITHM as worker no longer generates tokens.
# The worker will now receive a token from the Job Orchestration Service.

# Job Orchestration Service Database URL (for worker to update job status)
JOB_ORCHESTRATION_DATABASE_URL="postgresql+psycopg2://user:password@localhost:5434/job_db"

# Set the environment. 'development' allows auto-migrations.
ENVIRONMENT="development"
