# PostgreSQL database connection string for Job Orchestration Service
DATABASE_URL="postgresql+psycopg2://user:password@localhost:5434/job_db"

# Redis connection string for RQ (Job Queue)
REDIS_URL="redis://localhost:6379/0"

# JWT settings (CRITICAL: Must match Auth Service's SECRET_KEY and ALGORITHM)
# GENERATE A STRONG, UNIQUE KEY FOR PRODUCTION.
# Example: openssl rand -hex 32
SECRET_KEY="your-super-secret-key-here-change-this-in-production"
ALGORITHM="HS256"

# MinIO/S3 Object Storage Configuration for job results and logs
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_SECURE=True # SEC-CFG-001: Default to True for HTTPS. Set to False ONLY for specific dev environments.
MINIO_BUCKET_NAME="job-results"

# Set the environment. 'development' allows auto-migrations.
# In 'production' or 'testing', migrations should be handled externally (e.g., Alembic).
ENVIRONMENT="development"
